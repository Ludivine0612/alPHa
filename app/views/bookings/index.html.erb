<div class="container-fluid">
  <div class="row text-center">
    <h1 id="booking-title">RESERVATIONS</h1>
  </div>
  <div class="row" style="height: 70vh;">
    <div class="col-xs-12 col-sm-6">
      <% current_user.bookings.each do |booking| %>
        <div class="booking-card">
              <% if booking.prestations.first.job.nil? %>
                <span style="font-size: 18px; color: red;">
                  <i class="fas fa-times-circle"></i>
                </span>
              <% else %>
                <span style="font-size: 18px; color: green;">
                  <i class="fas fa-check-circle"></i>
                </span>
              <% end %>
              <%= simple_form_for booking.prestations.first do |f| %>
                <%= f.input :job, :collection => booking.company.employees, label_method: :first_name, :label => "EmployÃ© : " %>
                <%= f.button :submit %>
              <% end %>
              <% unless booking.prestations.first.job.nil? %>
                <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal2">
                  Launch demo modal
                </button>
                <!-- Modal -->
                <div class="modal fade" id="myModal2" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                  <div class="modal-dialog" role="document">
                    <div class="modal-content">
                      <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel">Modal title</h4>
                      </div>
                      <div class="modal-body">
                        <div id="modal-calendar" data-toto="<%= booking.prestations.first.job.prestations.map {|prestation| { title: prestation.activity.name, start: prestation.booking.start_date,end: prestation.booking.end_date }}.to_json %>">
                        </div>
                      </div>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Save changes</button>
                      </div>
                    </div>
                  </div>
                </div>
                <i class="far fa-calendar-alt" data-toggle="modal" data-target="#myModal"></i>
                <!-- <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Open Modal</button> -->
                <!-- Modal -->
                <div id="myModal" class="modal fade" role="dialog">
                  <div class="modal-dialog" role="document">
                    <!-- Modal content-->
                    <div class="modal-content">
                      <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h1 class="modal-title">Planning de la semaine</h1>
                      </div>
                      <div class="modal-body">
                        <div id="modal-calendar" data-toto="<%= booking.prestations.first.job.prestations.map {|prestation| { title: prestation.activity.name, start: prestation.booking.start_date,end: prestation.booking.end_date }}.to_json %>">
                        </div>
                      </div>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>
        </div>
      <% end %>
    </div>
    <div class="col-xs-12 col-sm-6" style="height: 100%;">
      <div id="map" style="width: 100%; height: 100%;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>
</div>


